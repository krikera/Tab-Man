{
  "manifest_version": 3,
  "name": "TabMan",
  "description": "Organize, search, and visualize your tabs!",
  "version": "1.1",
  "permissions": [
    "tabs",
    "storage",
    "bookmarks"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "TabMan"
  },
  "background": {
    "service_worker": "assets/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self';"
  }
}